{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "dist/",
		"allowJs": true,
		"moduleResolution": "node",
    	"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"baseUrl": "./",
		"paths": {
			"@srv/*": ["src/*", "dist/*"]
		},
		"incremental": true,
		"sourceMap": true
	},
	"include": ["./src/**/*"],
	"exclude": ["ormconfig.ts"]
}
